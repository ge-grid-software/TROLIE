{
    "yaml.maxItemsComputed": 50000,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "docs/_data/*",
                "isAsync": true,
                // set npm_config_registry= to use a custom registry
                "cmd": "npx --yes @redocly/cli bundle /spec/docs/_data/openapi-split.yaml -o /spec/docs/openapi.yaml"
            }
        ]
    }
}